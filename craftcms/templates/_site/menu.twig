{% macro utility( entry, settings ) %}
    {% set handle = 'utility' %}
    {% set label  = settings.label ?? 'Utility' %}
    {% set nodes  = craft.navigation.nodes().handle(handle).level(1).all() ??? null %}

    {% if nodes | length %}
        <div class="hidden md:flex items-center gap-3">

        </div>
    {% endif %}

{% endmacro %}



{% macro themes( entry, settings ) %}
    {% set handle = 'themes' %}
    {% set label  = settings.label ?? 'Themes' %}
    {% set nodes  = craft.navigation.nodes().handle(handle).level(1).all() ??? null %}

    {% if nodes %}
        <div class="@container">
            <div class="like-h3">{{ label }}</div>

            {% embed ['_site/menu.list', '_core/menu.list'] with {
                title: label,
                items: nodes,
            } %}
                {% block menuClass %}
                    m-0
                    p-0
                    list-none
                    flex
                    flex-col
                    leading-none
                    gap-4
                    text-xs
                    no-underline
                    underline-offset-2
                {% endblock %}

                {% block itemClass %}
                    flex
                    flex-col
                    items-center
                    whitespace-nowrap
                    text-theme-link
                    hover:text-theme-link-tint
                    hover:underline
                {% endblock %}
            {% endembed %}
        </div>
    {% endif %}
{% endmacro %}


