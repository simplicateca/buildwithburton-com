{## Base (Neutral) Theme
{---------------------------------------------------------------------------------##}
:root,
*[data-theme="base"] {
    --background      : transparent;
    --background-tint : 235	230	234; /**  EBE6EA  |  neutral-200  **/
    --background-tint2: 216	213	215; /**  D8D5D7  |  neutral-300  **/

    --headings        : 50	41	47;  /**  32292f  |  raisin       **/
    --headings-alt    : 252	250	250; /**  fcfafa  |  seasalt      **/
    --bodycopy        : 23 23 23;    /**  171717  |  neutral-900  **/
    --highlight       : 224	202	60;  /**  E0CA3C  |  confetti     **/

    --link            : 2	132	199; /**  0284C7  |  bondi        **/
    --link-tint       : 53	157	210; /**  359DD2  |  bondi-600    **/
    --accent          : 2	132	199; /**  0284C7  |  bondi        **/
    --accent-tint     : 53	157	210; /**  359DD2  |  bondi-600    **/
    --accent-alt      : 252	250	250; /**  fcfafa  |  seasalt      **/
}


