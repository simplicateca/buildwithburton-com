{% extends "_site/template.fullpage" %}

{% block bodyTagOpen %}
    {{ parent() | attr({
        class: ['bg-theme-dark'],
        'hx-ext': 'ajax-header'
    }) }}
{% endblock %}

{% block mainTagOpen %}
    {{ parent() | attr({
        class: ['max-w-3xl w-full mx-auto']
    }) }}
{% endblock %}

{% block page %}
    {{ tag( 'div', {
        class: ['max-5-3xl w-full mx-auto py-4'],
        html: block( 'logo' )
    })}}

    {{ block( 'header' ) | attr({
        class: ['max-w-3xl w-full mx-auto']
    }) }}

    {{ block( 'base_main' ) }}
{% endblock %}
